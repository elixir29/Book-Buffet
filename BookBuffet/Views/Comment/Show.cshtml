@model dynamic
@{
    Layout = null;
}


<style>
    tr:hover {
        background-color: #f5f5f5;
    }
</style>

@if (Model != null)
{
    foreach (var item in Model.CommentDTO)
    {
        <table style="border-spacing:5px">
            <tr>
                <th style="padding:15px"><img src="~/Content/avatar.png" class="img-circle img-responsive" alt="" width="30" height="30" /></th>
                <th>
                    By:
                    <font face="Courier New">@item.UserName</font> on
                    <font face="Courier New">@item.CommentDate.ToString("dd-MM-yyyy")</font>
                    <br />
                    <font size="2" face="Comic Sans MS">@item.CommentText</font>
                </th>
            </tr>
        </table>
    }
}


